    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700")
    link(rel="stylesheet" href="/css/index.css")
    link(rel="stylesheet" href="/css/bundle.css")
    script(src='/js/bundle.js' defer)
    if title
        title #{title}
